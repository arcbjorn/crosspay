# CrossPay Frontend Environment Variables

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Backend Service URLs
VITE_STORAGE_URL=http://localhost:3001
VITE_ENS_URL=http://localhost:3002
VITE_ORACLE_URL=http://localhost:3003
VITE_PAYMENT_PROCESSOR_URL=http://localhost:3000

# Filecoin Network (for SynapseSDK)
VITE_FILECOIN_NETWORK_ID=calibration

# Oracle Configuration
VITE_ORACLE_UPDATE_INTERVAL=30000
VITE_ORACLE_PRICE_DECIMALS=8

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_SERVICES=false