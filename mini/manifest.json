{
  "name": "CrossPay Mini",
  "short_name": "CrossPay",
  "description": "Quick USDC payments on Base with viral mechanics",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#764ba2",
  "orientation": "portrait-primary",
  "categories": ["finance", "payments", "defi"],
  "icons": [
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "512x512",
      "type": "image/svg+xml"
    }
  ],
  "payments": {
    "supported": ["usdc", "base-eth"],
    "methods": ["minikit"]
  },
  "features": {
    "social_sharing": true,
    "authentication": true,
    "payments": true,
    "qr_codes": true
  },
  "minikit": {
    "version": "1.0.0",
    "permissions": [
      "authenticate",
      "sendTransaction",
      "share"
    ]
  }
}