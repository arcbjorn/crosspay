{
  "name": "crosspay-protocol",
  "version": "0.1.0",
  "description": "Verifiable, private, cross-chain payment infrastructure",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter app dev",
    "build": "pnpm run build:contracts && pnpm run build:app",
    "build:contracts": "pnpm --filter contracts build",
    "build:app": "pnpm --filter app build",
    "test": "pnpm run test:contracts && pnpm run test:app",
    "test:contracts": "pnpm --filter contracts test",
    "test:app": "pnpm --filter app test",
    "test:e2e": "pnpm --filter app test:e2e",
    "test:e2e:ui": "pnpm --filter app test:e2e:ui",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm --recursive typecheck",
    "deploy:lisk": "pnpm --filter contracts deploy:lisk",
    "deploy:base": "pnpm --filter contracts deploy:base",
    "update-addresses:lisk": "node scripts/update-contract-addresses.js 4202",
    "update-addresses:base": "node scripts/update-contract-addresses.js 84532",
    "setup:deployment": "echo 'Please copy .env.example to .env and add your private key and API keys'"
  },
  "keywords": [
    "blockchain",
    "payments",
    "defi",
    "cross-chain"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}